{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        // "strict": ["error", "global"],
        "semi": ["error", "always"],
        "indent": ["error", 4],
        // "comma-dangle": ["error", "never"],
        "curly": ["error", "all"],
        "camelcase": ["error", { "properties": "never" }],
        "no-var": ["error"]
    },
    "ignorePatterns": ["node_modules/", "public/backend/","server/database/migrations", "server/database/seeds","test"]
}
